<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXProgressSpinner?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="connectingSceneVBox" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.eflerrr.seabattle.client.controller.ConnectingSceneController">
    <Label fx:id="connectingSceneTitle" text="Морской Бой">
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
    </Label>
    <VBox fx:id="connectingSceneLoadVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
        <Label fx:id="connectingSceneLoadLabel" text="Подключение к серверу..." />
      <MFXProgressSpinner fx:id="connectingSceneProgressSpinner" />
    </VBox>
</VBox>
