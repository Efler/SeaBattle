<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainSceneVBox" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.eflerrr.seabattle.client.MainSceneController">
   <Label fx:id="mainSceneTitle" text="Морской Бой">
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
   </Label>
   <VBox fx:id="mainSceneButtonsVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <Button fx:id="mainSceneStartButton" mnemonicParsing="false" onAction="#onStartGameClick" text="Начать игру" textAlignment="CENTER" />
      <Label fx:id="mainSceneOppLabel" text="Выберите соперника" />
      <HBox fx:id="mainSceneOppHBox" alignment="CENTER" prefHeight="0.0" prefWidth="200.0">
         <ToggleButton fx:id="mainSceneOppPlayerButton" mnemonicParsing="false" onAction="#onOppPlayerChoose" selected="true" text="Игрок" />
         <ToggleButton fx:id="mainSceneOppBotButton" mnemonicParsing="false" onAction="#onOppBotChoose" text="Бот" />
      </HBox>
      <Button fx:id="mainSceneRulesButton" mnemonicParsing="false" onAction="#onRulesClick" text="Правила" />
   </VBox>
</VBox>
