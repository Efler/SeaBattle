<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainSceneVBox" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.eflerrr.seabattle.client.controller.MainSceneController">
   <Label fx:id="mainSceneTitle" text="Морской Бой">
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
   </Label>
   <VBox fx:id="mainSceneButtonsVBox" alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
      <MFXButton fx:id="mainSceneStartButton" buttonType="RAISED" depthLevel="LEVEL4" onAction="#onStartGameClick" text="Начать игру" textAlignment="CENTER" />
      <MFXToggleButton fx:id="mainSceneOppToggleButton" text="Мультиплеер" />
      <MFXButton fx:id="mainSceneRulesButton" buttonType="RAISED" depthLevel="LEVEL4" onAction="#onRulesClick" text="Правила" textAlignment="CENTER" />
   </VBox>
</VBox>
